<div class="col-lg-12" style="overflow-x:auto;">
            <table id="example" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th> User Name </th>
                        <th> User ID </th>
                        <th> Position </th>
                        <th> Sponser Name </th>
                        <th> Sponser ID </th>
                        <th> Joining Date </th>
                        <th> Invoice Date </th>
                        <th> Amount </th>
                    </tr>
                </thead>
                <tbody>
                    <% @users.each do |user| %>
                    <tr>
                        <td><%= user.name %></td>
                        <td><%= user.sponser_id %></td>
                        <td><%= user.position %></td>
                        <td><%= User.find_by(id: user.sponsered_by_id).try(:name) %></td>
                        <td><%= User.find_by(id: user.sponsered_by_id).try(:sponser_id) %></td>
                        <td><%= user.created_at.strftime("%F") %></td>
                        <td><%= user.try(:invoice).try(:created_at).strftime("%F") %></td>
                        <td><%= user.try(:invoice).try(:amount) %></td>
                    </tr>
                    <%end%>
                    
                </tbody>
                <tfoot>
                    <tr>
                        <th> User Name </th>
                        <th> User ID </th>
                        <th> Position </th>
                        <th> Sponser Name </th>
                        <th> Sponser ID </th>
                        <th> Joining Date </th>
                        <th> Invoice Date </th>
                        <th> Amount </th>
                    </tr>
                </tfoot>
            </table>
        </div>